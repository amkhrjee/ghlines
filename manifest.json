{
    "manifest_version": 3,
    "name": "GitHub Lines",
    "description": "View line-counts of source files in the GitHub file tree",
    "version": "1.4",
    "action": {
        "default_title": "GitHub Lines",
        "default_popup": "./popup.html"
    },
    "permissions": [],
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*/*/tree/*"
            ],
            "js": [
                "./content.js"
            ]
        }
    ]
}